extends layout

block content
  div(class='container')
    form(action='/message',method='post',class='form-first')
      input(type='text',name='name',id='input-box',placeholder='name')
      div
        input(type='text',name='text',id='input-box',placeholder='message')
        div
          input(type='submit',value='send',name='sendBtn',class='btn btn-primary btn-x')
    form(action='/upload',class='form-second')
      input(type='submit',value='to upload page',class='btn btn-primary')
  a(class='menu-toggle rounded', href='#')
    i(class='fas fa-bars')
  nav(id='sidebar-wrapper',class='active')
    ul(calss='sidebar-nav')
      li(class='sidebar-brand')
        a(calss='js-scroll-triggr',href='#page-top') menu
      li(class='sidebar-nav-item')
        a(class='js-scroll-trigger',href='http://localhost:8080/upload') data upload
